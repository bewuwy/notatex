<!--  logged in/out handler  -->
<script>
    initApp = function() {
        firebase.auth().onAuthStateChanged(function(user) {
            if (user) {
                // User is signed in.
                const displayName = user.displayName;
                user.getIdToken().then(function(accessToken) {
                    console.log(user);
                    document.getElementById("userInfo").textContent = `Logged in as ${displayName}`;

                    document.getElementById("infoLogged").classList.remove("hidden");
                    document.getElementById("buttonLogin").classList.add('hidden');
                });
            } else {
                // User is signed out.
                document.getElementById("infoLogged").classList.add("hidden");
                document.getElementById("buttonLogin").classList.remove('hidden');
            }
        }, function(error) {
            console.log(error);
        });
    };

    window.addEventListener('load', function() {
        initApp()
    });
</script>
<!--  logged in/out handler  -->
<script>
    initApp = function() {
        firebase.auth().onAuthStateChanged(function(user) {
            if (user) {
                // User is signed in.
                console.log("user logged in");
                // console.log(user);

                // set user info in topbar
                document.getElementById("userInfo").textContent = `${user.displayName}`;

                document.getElementById("infoLogged").classList.remove("hidden");
                document.getElementById("buttonLogin").classList.add('hidden');

            } else {
                // User is signed out.
                document.getElementById("infoLogged").classList.add("hidden");
                document.getElementById("buttonLogin").classList.remove('hidden');

                document.body.classList.value = "";
                eraseCookie("theme");
            }
        }, function(error) {
            console.log(error);
        });
    };

    window.addEventListener('load', initApp);
</script>

<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('partials/head', { title: user }); %>
        <script src="/javascripts/userData.js"></script>
    </head>
    <body>
        <div id="content">

            <div class="mb-12">
                <%- include('partials/topBar'); %>
            </div>

            <div class="flex items-baseline">
                <span class="text-4xl font-bold"><%= user %></span>
                <% if (verified) { %>
                    <svg xmlns="http://www.w3.org/2000/svg" class="ml-1 h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                        <title><%= user %> is a verified user, you can trust his notes</title>
                    </svg>
                <% } %>
            </div>

            <h3><%= user %>'s notes:</h3>
            <div id="user-notes">
                <% for (var i = 0; i < noteList.length; i++) { %>
                   <p><a href="/note/<%= noteList[i] %>"><%= noteList[i] %></a></p>
                <% } %>
            </div>
        </div>
    </body>
</html>
